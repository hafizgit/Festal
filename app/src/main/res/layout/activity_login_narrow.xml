<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="app.dori.festal.activity.LoginNarrowActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/festal_logo"
        android:layout_centerHorizontal="true"
        android:id="@+id/festal_logo"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/festal_logo"
        android:padding="16dp"
        android:layout_marginTop="30dp">

        <fragment
            android:name="app.dori.festal.fragments.LoginFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_login"
            android:id="@+id/login_narrow_fragment"/>
    </FrameLayout>
</RelativeLayout>
